pipeline {
    agent any

    stages {
        stage('Clone from GitHub') {
            steps {
                git url: 'https://github.com/Anusha-90/Jenkins-Zero-To-Hero.git', branch: 'main'
            }
        }

        stage('Run Script') {
            steps {
                sh 'echo "Hello from Jenkins!"'
            }
        }
    }
}

